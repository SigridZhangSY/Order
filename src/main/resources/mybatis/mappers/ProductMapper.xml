<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.thoughtworks.api.mappers.ProductMapper">
    <select id="getAllProduct" resultMap="records.product">
        SELECT
        <include refid="columns.product"/>
        FROM products P
    </select>
    <select id="findById" resultMap="records.product">
        SELECT
        <include refid="columns.product"/>
        FROM products P
        WHERE P.product_id = #{productId}
    </select>
    <insert id="save">
        INSERT INTO products (product_id, name, description, price, rating)
        VALUES(#{productId}, #{name}, #{description}, #{price}, #{rating})
    </insert>
    <select id="getProductCount" resultType="Integer">
        SELECT COUNT(*)
        FROM PRODUCTS
    </select>
 </mapper>

